{
  "name": "semantic-release-pulsar",
  "description": "semantic-release plugin to publish Pulsar packages",
  "version": "0.0.0-development",
  "author": "Ewan Harris",
  "ava": {
    "files": [
      "test/**/*.test.js"
    ]
  },
  "bugs": {
    "url": "https://github.com/ewanharris/semantic-release-pulsar/issues"
  },
  "dependencies": {
    "@semantic-release/error": "^3.0.0",
    "aggregate-error": "^3.0.0",
    "execa": "^5.0.0",
    "read-pkg": "^5.0.0"
  },
  "devDependencies": {
    "ava": "5.2.0",
    "clear-module": "4.1.2",
    "dockerode": "3.3.4",
    "fs-extra": "11.1.0",
    "get-stream": "6.0.1",
    "got": "11.8.6",
    "mockserver-client": "5.15.0",
    "nyc": "15.1.0",
    "p-retry": "4.6.2",
    "semantic-release": "20.1.1",
    "sinon": "15.0.1",
    "stream-buffers": "3.0.2",
    "tempy": "1.0.1",
    "xo": "0.53.1"
  },
  "engines": {
    "node": ">=14.17"
  },
  "files": [
    "lib",
    "index.js"
  ],
  "homepage": "https://github.com/ewanharris/semantic-release-pulsar#readme",
  "keywords": [
    "ppm",
    "pulsar",
    "pulsar-packages",
    "pulsar-edit",
    "publish",
    "registry",
    "semantic-release",
    "version"
  ],
  "license": "MIT",
  "main": "index.js",
  "nyc": {
    "include": [
      "lib/**/*.js",
      "index.js"
    ],
    "reporter": [
      "json",
      "text",
      "html"
    ],
    "all": true
  },
  "peerDependencies": {
    "semantic-release": ">=18.0.0"
  },
  "prettier": {
    "printWidth": 120,
    "trailingComma": "es5"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ewanharris/semantic-release-pulsar.git"
  },
  "scripts": {
    "lint": "xo",
    "pretest": "npm run lint",
    "semantic-release": "semantic-release",
    "test": "nyc ava -v"
  },
  "xo": {
    "prettier": true,
    "space": true,
    "rules": {
      "unicorn/string-content": "off",
      "unicorn/prefer-module": "off",
      "unicorn/no-await-expression-member": "off",
      "unicorn/prefer-node-protocol": "off"
    }
  },
  "release": {
    "branches": [
     "main"
    ]
  }
}
